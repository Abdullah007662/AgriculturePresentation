@model EntityLayer.Concrete.AnnounCemet
@{
    ViewData["Title"] = "AddAnnounCement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Duyuru Girişi</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnounCemetID)
                <div class="form-group">
                    <label >Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" pleaceholder="başlık giriniz" asp-for="AnnounCemetTitle" placeholder="başlık giriniz">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" id="exampleInputName1" pleaceholder="tarih giriniz" asp-for="Date" placeholder="başlık giriniz">
                </div>
                <div class="form-group">
                    <label >Açıklama</label>
                    <textarea cols="30" rows="5"asp-for="AnnounCemetDescription" class="form-control" placeholder="açıklamayı giriniz"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>


